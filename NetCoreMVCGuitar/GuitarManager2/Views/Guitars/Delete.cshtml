@model Guitar

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Guitar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Manufacturer
        </dt>
        <dd>
            @Model.Manufacturer)
        </dd>
        <dt>
            Model Name
        </dt>
        <dd>
            @Model.ModelName
        </dd>
        <dt>
            Year Made
        </dt>
        <dd>
            @Model.YearMade
        </dd>
        <dt>
            Price
        </dt>
        <dd>
            @Model.Price.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="guitarId" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
