@model AreaCalculatorModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Area Calculator</h1>
    <form asp-action="Index" asp-controller="Home" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Length" class="control-label">Length</label>
            <input asp-for="Length" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Width" class="control-label">Width</label>
            <input asp-for="Width" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <a asp-action="Index" asp-controller="Home">Clear</a>
        <div class="form-group">
            <label for="txtArea" class="control-label">Area</label>
            <input id="txtArea" name="txtArea" class="form-control" value="@ViewBag.Area.ToString("F3")" readonly />
        </div>
    </form>
</div>
